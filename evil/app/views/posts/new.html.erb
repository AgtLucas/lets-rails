<h1>Create new post</h1>

<%= form_for :post, url: posts_path do |f| %>

  <p>
    <%= f.text_field :title, :placeholder => 'Title' %>
  </p>

  <p>
    <%= f.text_area :text, :placeholder => 'Your thoughts...' %>
  </p>

  <p>
    <%= f.button %>
  </p>

<% end %>

<%= link_to "Back", posts_path, :class => 'go-back' %>